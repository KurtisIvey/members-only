<content class="messageBoard__mainContainer">
  <div class="messageBoard__headerContainer">
    <h2>Welcome To the Members Only Messaging Board</h2>
    <a href="message-board/new-post">➕ Add Post</a>
  </div>
  <div class="messageBoard__posts">
    <% posts.forEach((post) => { %>
    <div class="messageBoard__postContainer">
      <div class="messageBoard__postTopRow">
        <div class="messageBoard__postDetails">
          <h3><%= post.title%></h3>
          <div>By <%= post.author.username%> at <%= post.dateAndTime%></div>
        </div>
        <form method="POST" action="/message-board/delete/<%=post.id%>">
          <% if( user.admin === true) {%>
          <button type="submit" class="messageBoard__deletePostBtn">🗑️</button>
          <%}else { %>
          <button
            disabled
            type="submit"
            class="messageBoard__deletePostBtnDisabled"
          >
            🗑️
          </button>

          <%}%>
        </form>
      </div>

      <p><%= post.textContent%></p>
    </div>
    <%})%>
  </div>
</content>
